            <i class="fa fa-shield text-primary mt-1 mr-3"></i>
            <span data-i18n="security_verification">进行安全验证确保账户安全</span>
          </div>
          <div class="flex items-start">
            <i class="fa fa-gift text-primary mt-1 mr-3"></i>
            <span data-i18n="gift_card_preparation">为您准备礼品卡</span>
          </div>
        </div>
      </div>
      
      <!-- 取消按钮 -->
      <div class="mt-8">
        <button id="cancelLogin" class="text-secondary hover:text-primary text-sm transition-colors">
          <span data-i18n="cancel_login">取消登录</span>
        </button>
      </div>
    </div>
  </div>
