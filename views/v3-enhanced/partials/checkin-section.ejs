<!-- 签到区域 -->
<section id="checkinPage" class="page py-32 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto">
      <!-- 页面标题 -->
      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold mb-2" data-i18n="daily_checkin">每日签到</h2>
        <p class="text-secondary" data-i18n="checkin_description">每日签到可获得额外奖励</p>
      </div>
      
      <!-- 签到资格检查 -->
      <div id="checkinEligibility" class="mb-8">
        <!-- 资格信息将在这里显示 -->
      </div>
      
      <!-- 签到按钮 -->
      <div class="text-center mb-8">
        <button id="performCheckin" class="primary-btn px-8 py-4 rounded-full hover:bg-primary/90 transition-colors shadow-gift text-lg font-medium" disabled>
          <i class="fa fa-calendar-check-o mr-2"></i>
          <span data-i18n="checkin_now">立即签到</span>
        </button>
      </div>
      
      <!-- 签到结果 -->
      <div id="checkinResult" class="mb-8">
        <!-- 签到结果将在这里显示 -->
      </div>
      
      <!-- 签到说明 -->
      <div class="bg-neutral-100 p-6 rounded-2xl mb-8">
        <h3 class="text-lg font-medium mb-4" data-i18n="checkin_rules">签到规则</h3>
        <div class="space-y-3 text-sm">
          <div class="flex items-start">
            <i class="fa fa-clock-o text-primary mt-1 mr-3"></i>
            <span data-i18n="checkin_time_limit">每日仅可签到一次</span>
          </div>
          <div class="flex items-start">
            <i class="fa fa-gift text-primary mt-1 mr-3"></i>
            <span data-i18n="checkin_rewards">签到可能获得礼品卡奖励</span>
          </div>
          <div class="flex items-start">
            <i class="fa fa-calendar text-primary mt-1 mr-3"></i>
            <span data-i18n="consecutive_checkin">连续签到获得更多奖励</span>
          </div>
        </div>
      </div>
      
      <!-- 返回按钮 -->
      <div class="text-center">
        <button id="backToGiftCard" class="bg-white border border-neutral-200 text-neutral-800 px-6 py-3 rounded-full hover:bg-neutral-50 transition-colors shadow-gift">
          <i class="fa fa-arrow-left mr-2"></i>
          <span data-i18n="back">返回</span>
        </button>
      </div>
    </div>
  </div>
</section>
