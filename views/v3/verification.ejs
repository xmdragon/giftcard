<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || '验证 - 账户ID' %></title>
  
  <!-- 本地CSS文件 -->
  <link rel="stylesheet" href="/v3/css/tailwind.min.css">
  <link rel="stylesheet" href="/v3/css/font-awesome.min.css">
  <link rel="stylesheet" href="/v3/css/style.css">
</head>

<body>
  <!-- 加载动画 -->
  <div class="loading-overlay" id="loading-overlay">
    <div class="spinner"></div>
  </div>

  <!-- 顶部导航 -->
  <header class="fixed top-0 left-0 right-0 bg-white/80 backdrop-blur-sm border-b border-neutral-200 z-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <button id="back-btn" class="text-neutral-800">
          <i class="fa fa-arrow-left"></i> 返回
        </button>
        <div class="flex items-center">
          <img src="/v3/images/logo.png" class="h-8 w-auto mr-2" alt="Logo">
          <span class="text-lg font-semibold">GiftCard</span>
        </div>
        <div class="w-6"></div> <!-- 占位，保持居中 -->
      </div>
    </div>
  </header>

  <!-- 验证码区域 -->
  <section class="py-32 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-md mx-auto">
        <div class="text-center mb-8">
          <h1 class="text-2xl font-bold">验证您的身份</h1>
          <p class="text-secondary mt-2" id="verification-message">
            验证码已发送至您的设备
          </p>
          <p class="text-sm text-secondary mt-1" id="device-name">
            iPhone
          </p>
        </div>
        
        <!-- 步骤指示器 -->
        <div class="steps-indicator">
          <div class="step active"></div>
          <div class="step active"></div>
          <div class="step"></div>
        </div>
        
        <!-- 验证码表单 -->
        <form id="verification-form" class="mt-8">
          <!-- 验证码输入框 -->
          <div class="input-container mb-2">
            <i class="fa fa-shield input-icon text-xl"></i>
            <input type="text" id="code-input" class="form-input w-full text-center" placeholder="输入6位验证码" maxlength="6" required>
          </div>
          <div id="code-error" class="error-message text-center">请输入有效的6位验证码</div>
          
          <div class="text-center mb-8 mt-2">
            <span id="resend-code" class="countdown">重新发送</span>
          </div>
          
          <button type="submit" class="primary-btn w-full py-3 rounded-full hover:bg-primary/90 transition-colors shadow-gift text-lg font-medium">
            继续
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- 页脚 -->
  <footer class="bg-neutral-100 py-12 border-t border-neutral-200 mt-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center text-sm text-secondary">
        <p>© 2023 GiftCard. 保留所有权利。</p>
      </div>
    </div>
  </footer>

  <!-- 本地JavaScript文件 -->
  <script src="/v3/js/app.js"></script>
  <script src="/v3/js/verification.js"></script>
</body>
</html>
