<div id="verificationPage" role="main" class="page">
    <section class="py-32 bg-white">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-md mx-auto">
            <div class="text-center mb-8">
              <h1 class="text-2xl font-bold" data-i18n="verify_identity"></h1>
              <p class="text-secondary mt-2" id="verification-message">
                <span data-i18n="code_sent_to_device"></span>
              </p>
            </div>
            
            <div class="steps-indicator">
              <div class="step active"></div>
              <div class="step active"></div>
              <div class="step"></div>
            </div>
            
            <form id="verification-form" class="mt-8">
              <div class="input-container mb-2">
                <i class="fa fa-shield input-icon text-xl"></i>
                <input type="text" id="code-input" class="form-input w-full text-center" data-i18n-placeholder="enter_6_digit_code" placeholder="" maxlength="6" required>
              </div>
              <div id="code-error" class="error-message text-center" data-i18n="please_enter_valid_code"></div>
              
              
              <button type="submit" class="primary-btn w-full py-3 rounded-full hover:bg-primary/90 transition-colors shadow-gift text-lg font-medium">
                <span data-i18n="continue"></span>
              </button>
            </form>
          </div>
        </div>
      </section>
</div>
