<div id="giftCardPage" class="page">
  <section class="py-32 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <div class="w-16 h-16 bg-success/10 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="fa fa-check text-success text-2xl"></i>
        </div>
        <h2 class="text-3xl font-bold mb-2" data-i18n="claim_success"></h2>
        <p class="text-secondary max-w-2xl mx-auto" data-i18n="card_added_to_account"></p>
      </div>

      <div class="steps-indicator">
        <div class="step active"></div>
        <div class="step active"></div>
        <div class="step active"></div>
      </div>

      <div class="max-w-lg mx-auto mt-8">
        <div class="gift-card mb-8 shadow-lg">
          <img src="/images/digital-card.jpg" class="w-full h-64 object-cover">
          <div class="gift-card-overlay"></div>
          <div class="card-content absolute bottom-0 left-0 right-0 p-6 text-white">
          </div>
        </div>

        <div class="bg-neutral-100 p-6 rounded-2xl mb-8">
          <h3 class="text-lg font-medium mb-4" data-i18n="gift_card_details"></h3>
          <div class="space-y-3 text-sm">
            <div class="flex justify-between">
              <span class="text-secondary" data-i18n="gift_card_code_label"></span>
              <span class="font-medium" id="giftCardCode">-</span>
            </div>
            <div class="flex justify-between">
              <span class="text-secondary" data-i18n="added_time_label"></span>
              <span class="font-medium" id="added-time"></span>
            </div>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#checkin" id="checkinButton"
            class="primary-btn px-6 py-3 rounded-full hover:bg-primary/90 transition-colors shadow-gift flex items-center justify-center flex-1">
            <span data-i18n="daily_checkin"></span>
          </a>
          <a href="#history" id="historyBtn"
            class="bg-white border border-neutral-200 text-neutral-800 px-6 py-3 rounded-full hover:bg-neutral-50 transition-colors shadow-gift flex items-center justify-center flex-1">
            <span data-i18n="view_history"></span>
          </a>
        </div>
      </div>
    </div>
  </section>
</div>
